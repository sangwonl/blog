---
type Props = {
  src: string;
};

const base = (import.meta.env.BASE_URL || "").replace(/\/$/, "");
const { src: rawSrc } = Astro.props;
const src = rawSrc.startsWith("/") ? `${base}${rawSrc}` : rawSrc;
---

<div>
  <video controls playsinline class="w-full max-w-2xl">
    <source src={src} type="video/mp4" />
  </video>
</div>
