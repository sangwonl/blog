---
import MarkdocRenderer from "./MarkdocRenderer.astro";
import type { RenderableTreeNodes } from "@markdoc/markdoc";
import YouTubeEmbed from "./YouTubeEmbed.astro";
import TweetEmbed from "./TweetEmbed.astro";
import CodePenEmbed from "./CodePenEmbed.astro";
import GitHubGistEmbed from "./GitHubGistEmbed.astro";
import VideoEmbed from "./VideoEmbed.astro";
import CodeBlock from "./CodeBlock.astro";
import Heading from "./Heading.astro";

type Props = {
  content: RenderableTreeNodes;
};

const { content } = Astro.props;

const components = {
  Heading: {
    Component: Heading,
    props: {},
  },
  CodeBlock: {
    Component: CodeBlock,
    props: {},
  },
  YouTubeEmbed: {
    Component: YouTubeEmbed,
    props: {},
  },
  TweetEmbed: {
    Component: TweetEmbed,
    props: {},
  },
  CodePenEmbed: {
    Component: CodePenEmbed,
    props: {},
  },
  GitHubGistEmbed: {
    Component: GitHubGistEmbed,
    props: {},
  },
  VideoEmbed: {
    Component: VideoEmbed,
    props: {},
  },
};
---

<MarkdocRenderer content={content} components={components} />
